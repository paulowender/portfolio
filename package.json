{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "analyze": "ANALYZE=true next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build",
    "migrate": "node scripts/apply-migration.js",
    "seed": "node scripts/seed-database.js",
    "generate-schema": "node scripts/generate-schema.js",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "build:production": "NODE_ENV=production NEXT_PUBLIC_PRODUCTION=true next build",
    "start:production": "NODE_ENV=production NEXT_PUBLIC_PRODUCTION=true next start",
    "build:staging": "NODE_ENV=production NEXT_PUBLIC_STAGING=true next build",
    "start:staging": "NODE_ENV=production NEXT_PUBLIC_STAGING=true next start",
    "clean": "rm -rf .next",
    "build:clean": "npm run clean && npm run build",
    "build:production:clean": "npm run clean && npm run build:production",
    "start:pm2:production": "pm2 start npm --name \"wender-tech-portfolio\" -- run start:production",
    "stop:pm2:production": "pm2 stop wender-tech-portfolio",
    "restart:pm2:production": "npm run stop:pm2:production && npm run start:pm2:production"
  },
  "dependencies": {
